{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% if app.environment == 'prod' %}
<!-- prod:bootstrap.css -->
<link rel="stylesheet" href="/compiled/css/bootstrap.css/bootstrap.css" />
<!-- endbuild -->

<!-- prod:main.css -->
<link rel="stylesheet" href="/compiled/css/main.css/main.css" />
<!-- endbuild -->
{% else %}
<!-- dev:bootstrap.css -->
<link rel="stylesheet" href="/compiled_dev/css/bootstrap.css/bootswatch_0.css" />
