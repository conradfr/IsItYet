            {{ knp_menu_render('AppBundle:Builder:mainMenu', {'currentClass': 'active'}) }}

            <div id="instances-dropdown">
                {% include ":mixins:instances-dropdown.html.twig" %}
            </div>
        </div><!-- /.nav-collapse -->
    </div><!-- /.container -->
